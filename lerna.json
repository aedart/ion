{
    "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
    "version": "0.4.0",
    "useNx": true,
    "useWorkspaces": true,
    "packages": [
        "packages/*"
    ],
    "tagVersionPrefix": "",
    "command": {
        "version": {
            "allowBranch": ["main", "replace-lerna"],
            "conventionalCommits": false,
            "allowPeerDependenciesUpdate": true,
            "message": "Release of v%v"
        },
        "publish": {
            "message": "Publish %v",
            "graphType": "all",
            "noGitReset": true
        },
        "create": {
            "homepage": "https://github.com/aedart/ion",
            "license": "BSD-3-Clause"
        }
    }
}
